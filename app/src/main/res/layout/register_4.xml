<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="25dp"
    android:background="@drawable/bluebg"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.androidmysql.MainActivity">


    <TextView
        android:id="@+id/etReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/putih"
        android:layout_marginTop="50dp"
        android:text="Let's review your information"
        android:layout_marginBottom="8dp"
        />
    <TextView
        android:id="@+id/etChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@id/etReview"
        android:textColor="@color/putih"
        android:text="You can change it if you want"
        />


    <EditText
        android:hint="Insert Full Name"
        android:textColorHint="@color/putih"
        android:id="@+id/et_name_reg4"
        android:textColor="@color/putih"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_full_name"
        android:layout_below="@+id/etChange"
        android:backgroundTint="@color/putih"
        android:foregroundTint="@color/putih"/>

    <EditText
        android:hint="Insert Username"
        android:textColorHint="@color/putih"
        android:drawablePadding="10dp"
        android:id="@+id/et_username_reg4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/et_name_reg4"
        android:textColor="@color/putih"
        android:drawableLeft="@drawable/ic_user"
        android:backgroundTint="@color/putih"
        android:foregroundTint="@color/putih"/>


    <EditText
        android:hint="Insert Password"
        android:textColorHint="@color/putih"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/et_password_reg4"
        android:layout_below="@+id/et_username_reg4"
        android:inputType="textPassword"
        android:textColor="@color/putih"
        android:backgroundTint="@color/putih"
        android:foregroundTint="@color/putih"
        android:drawableLeft="@drawable/ic_pass"/>

    <EditText
        android:drawablePadding="10dp"
        android:textColor="@color/putih"
        android:hint="Insert Phone Number"
        android:textColorHint="@color/putih"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/et_phone_reg4"
        android:layout_below="@+id/et_password_reg4"
        android:inputType="number"
        android:maxLength="12"
        android:drawableLeft="@drawable/ic_phone"
        android:backgroundTint="@color/putih"
        android:foregroundTint="@color/putih"/>

    <EditText
        android:hint="Insert Email Address"
        android:textColorHint="@color/putih"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/et_email_reg4"
        android:layout_below="@+id/et_phone_reg4"
        android:inputType="textEmailAddress"
        android:textColor="@color/putih"
        android:drawableLeft="@drawable/ic_email"
        android:backgroundTint="@color/putih"
        android:foregroundTint="@color/putih"/>


    <Button
        android:id="@+id/button_reg4"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Create an account"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonlogin"
        android:layout_marginTop="20dp"
        android:textColor="@color/birugelap"
        android:layout_below="@id/et_email_reg4"/>

    <TextView
        android:id="@+id/tv_reg4_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="TERM And CONDITIONS"
        android:layout_below="@id/tv_reg4_condition"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:textColor="@color/kuning"/>

    <TextView
        android:id="@+id/tv_reg4_condition"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_reg4"
        android:layout_centerHorizontal="true"
        android:text="By registering your account, you agree with our"
        android:textColor="@color/putih"/>
</RelativeLayout>
